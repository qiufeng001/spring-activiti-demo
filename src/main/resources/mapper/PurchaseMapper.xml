<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.activiti.test.mapper.PurchaseApplyMapper">
	<select id="get" resultType="com.activiti.test.po.PurchaseApply" parameterType="int">
		select * from purchase where id=#{id} 
	</select>
	<insert id="save" useGeneratedKeys="true" keyProperty="id" parameterType="com.activiti.test.po.PurchaseApply">
	  insert into purchase (id,itemlist,total,applytime,applyer)
	  values (#{id},#{itemlist},#{total},#{applytime},#{applyer})
	</insert>
	<update id="update" parameterType="com.activiti.test.po.PurchaseApply">
		update purchase set itemlist=#{itemlist},total=#{total},
		applytime=#{applytime},applyer=#{applyer}
		where id=#{id}
	</update>
</mapper>